<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
	<property>
		<name>hadoop.tmp.dir</name>
		<value>/tmp/hadoop-${user.name}</value>
	</property>
	<property>
		<name>fs.default.name</name>
		<value>file:///</value>
	</property>
	<property>
		<name>mapred.job.tracker</name>
		<value>local</value>
	</property>
	<property>
		<name>mapred.child.java.opts</name>
		<value>-Xmx2048m</value>
	</property>
	<property>
		<name>data.train.path</name>
		<value>data/corpus6/train/corpus-sequences</value>
	</property>
	<property>
		<name>data.test.path</name>
		<value>data/corpus6/test/corpus-sequences</value>
	</property>
</configuration>
